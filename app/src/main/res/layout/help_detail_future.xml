<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_help_detail_future"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_help_detail_future_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_action_help"
            android:text="@string/detail_future_detail"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/background_dark"/>

        <TextView
            android:id="@+id/tv_help_detail_future_taken_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/abc_text_size_subhead"
            android:textStyle="bold"
            android:text="@string/detail_future_taken_label"/>

        <TextView
            android:id="@+id/tv_help_detail_future_taken_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/detail_future_taken_text"/>

        <TextView
            android:id="@+id/tv_help_detail_future_edit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_subhead"
            android:textStyle="bold"
            android:text="@string/detail_future_edit_label"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_help_detail_future_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/detail_future_edit_text"/>

        <TextView
            android:id="@+id/tv_help_detail_future_delete_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_subhead"
            android:textStyle="bold"
            android:text="@string/detail_future_delete_label"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_help_detail_future_delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/detail_future_delete_text"/>

    </LinearLayout>
</ScrollView>