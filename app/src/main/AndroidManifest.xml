<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="net.innit.drugbug"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".DoseListActivity"
            android:noHistory="true"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MedicationListActivity"
            android:noHistory="true"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".AddDoseActivity"
            android:label="@string/add_dose_title_add"
            android:parentActivityName=".DoseListActivity"/>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/preferences_title"
            android:parentActivityName=".MainActivity"/>

        <service android:name=".util.NotifyService"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="net.innit.drugbug.med_image.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/med_image_path"/>
        </provider>

    </application>

</manifest>
